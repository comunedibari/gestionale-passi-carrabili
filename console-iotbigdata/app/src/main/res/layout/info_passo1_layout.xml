<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/text_address"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indirizzo segnale indicatore"
        android:textColor="@android:color/black"
        android:fontFamily="@font/titilliumweb_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/text_normal"/>
    <TextView
        android:id="@+id/text_indirizzo_segnale_indicatore"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="-"
        android:maxLines="2"
        android:fontFamily="@font/titilliumweb_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_address"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:textSize="@dimen/text_big"/>

    <TextView
        android:id="@+id/text_numerocartello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N. determina"
        android:layout_marginTop="14dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/titilliumweb_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_indirizzo_segnale_indicatore"
        android:textSize="@dimen/text_normal"/>
    <TextView
        android:id="@+id/text_numero_determina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/titilliumweb_regular"
        app:layout_constraintTop_toBottomOf="@+id/text_numerocartello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        android:textSize="@dimen/text_big" />

    <TextView
        android:id="@+id/text_fabbricato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N. protocollo"
        android:layout_marginTop="14dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/titilliumweb_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_data_emissione_determina"
        android:textSize="@dimen/text_normal" />
    <TextView
        android:id="@+id/text_numero_protocollo"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/titilliumweb_regular"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_fabbricato"
        android:textSize="@dimen/text_big"/>

    <TextView
        android:id="@+id/text_idpratica"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id pratica"
        android:visibility="gone"
        android:layout_marginTop="14dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/titilliumweb_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_numero_protocollo"
        android:textSize="@dimen/text_normal"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/text_numero_protocollo_comunicazione"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:paddingEnd="8dp"
        android:fontFamily="@font/titilliumweb_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_idpratica"
        android:textSize="@dimen/text_big"/>

    <TextView
        android:id="@+id/text_dataoperazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data emissione determina"
        android:textColor="@android:color/black"
        android:fontFamily="@font/titilliumweb_bold"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/text_stato_pratica"
        android:textSize="@dimen/text_normal"/>
    <TextView
        android:id="@+id/text_data_emissione_determina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_dataoperazione"
        android:text="-"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/titilliumweb_regular"
        android:textSize="@dimen/text_big"/>

    <TextView
        android:id="@+id/text_statopratica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stato pratica"
        android:textColor="@android:color/black"
        android:fontFamily="@font/titilliumweb_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        android:textSize="@dimen/text_normal" />
    <TextView
        android:id="@+id/text_stato_pratica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:paddingEnd="8dp"
        android:maxLines="2"
        android:fontFamily="@font/titilliumweb_regular"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_statopratica"
        android:textSize="@dimen/text_big" />

    <TextView
        android:id="@+id/text_datacartello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data scadenza concessione"
        android:textColor="@android:color/black"
        android:fontFamily="@font/titilliumweb_bold"
        app:layout_constraintTop_toTopOf="@id/text_fabbricato"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/text_numero_determina"
        android:textSize="@dimen/text_normal" />
    <TextView
        android:id="@+id/text_data_scadenza_concessione"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/titilliumweb_regular"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_datacartello"
        android:textSize="@dimen/text_big" />

    <Button
        android:id="@+id/buttonCittadino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Info cittadino" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        app:layout_constraintGuide_percent="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        app:layout_constraintGuide_percent="0.68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>