<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="vertical"/>

        <ImageView
            android:id="@+id/image_history"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_menu_carraio"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/titilliumweb_bold"
            android:text="Passo Carrabile 123 in Via Roma 58"
            app:layout_constraintStart_toEndOf="@id/image_history"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/date_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            android:text="Data segnalazione: "
            android:layout_marginTop="16dp"
            android:fontFamily="@font/titilliumweb_bold"
            android:textColor="@color/colorBlack"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"/>

        <TextView
            android:id="@+id/date_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            android:text="23/07/2010 18:54"
            android:fontFamily="@font/titilliumweb_regular"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/date_label"
            app:layout_constraintBaseline_toBaselineOf="@id/date_label"/>

        <TextView
            android:id="@+id/agent_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginTop="16dp"
            android:text="Agente: "
            android:fontFamily="@font/titilliumweb_bold"
            android:textColor="@color/colorBlack"

            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/title"/>

        <TextView
            android:id="@+id/agent_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            android:text="Marco Rossi"
            android:fontFamily="@font/titilliumweb_regular"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/agent_label"
            app:layout_constraintBaseline_toBaselineOf="@id/agent_label"/>

        <TextView
            android:id="@+id/report_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            android:text="Nota: "
            android:layout_marginTop="8dp"
            android:fontFamily="@font/titilliumweb_bold"
            android:textColor="@color/colorBlack"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_value"/>

        <TextView
            android:id="@+id/report_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            android:text="Testo segnalazione"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/titilliumweb_italic"
            app:layout_constraintStart_toEndOf="@id/report_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/report_label"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGreyPress"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/report_value"/>

        <TextView
            android:id="@+id/proprietario_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            android:text="Proprietario: "
            android:layout_marginTop="16dp"
            android:fontFamily="@font/titilliumweb_bold"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"/>

        <TextView
            android:id="@+id/proprietario_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            android:text="Alessandro Bianchi"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/titilliumweb_regular"
            app:layout_constraintStart_toEndOf="@id/proprietario_label"
            app:layout_constraintBaseline_toBaselineOf="@id/proprietario_label"/>

        <TextView
            android:id="@+id/email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            android:text="Email: "
            android:layout_marginTop="16dp"
            android:fontFamily="@font/titilliumweb_bold"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/line"/>

        <TextView
            android:id="@+id/email_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            android:text="abc@hotmail.it"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/titilliumweb_regular"
            app:layout_constraintStart_toEndOf="@id/email_label"
            app:layout_constraintBaseline_toBaselineOf="@id/email_label"/>

        <TextView
            android:id="@+id/phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginTop="8dp"
            android:text="Telefono: "
            android:fontFamily="@font/titilliumweb_bold"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/proprietario_label"/>

        <TextView
            android:id="@+id/phone_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0"
            android:text="33812345678"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/titilliumweb_regular"
            app:layout_constraintStart_toEndOf="@id/phone_label"
            app:layout_constraintBaseline_toBaselineOf="@id/phone_label"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
