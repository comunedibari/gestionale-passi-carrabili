<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_tag_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="@dimen/margin_standard">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Prova"
                android:ellipsize="end"
                android:fontFamily="@font/titilliumweb_regular"
                android:textAppearance="@style/cart_history.title" />

            <TextView
                android:id="@+id/address_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:text="Indirizzo"
                android:fontFamily="@font/titilliumweb_regular"
                android:textAppearance="@style/cart_history.subtitle" />

            <TextView
                android:id="@+id/text_subtitle_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Prova2"
                android:fontFamily="@font/titilliumweb_regular"
                android:textAppearance="@style/cart_history.subtitle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bool_valid_tag"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_active_green_red"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>